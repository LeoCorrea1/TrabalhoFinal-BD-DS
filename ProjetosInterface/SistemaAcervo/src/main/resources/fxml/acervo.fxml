<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.SistemaAcervo.controller.AcervoController">
    <top>
        <ToolBar>
            <Button text="Novo" onAction="#limparForm"/>
            <Button text="Salvar" onAction="#onSalvar"/>
            <Button text="Editar" onAction="#onEditar"/>
            <Button text="Excluir" onAction="#onExcluir"/>
            <Region HBox.hgrow="ALWAYS"/>
            <TextField fx:id="txtBuscar" promptText="Buscar..." onKeyReleased="#onBuscar"/>
        </ToolBar>
    </top>

    <center>
        <SplitPane orientation="VERTICAL">
            <VBox spacing="6">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>

                <GridPane hgap="8" vgap="8">
                    <Label text="Nome:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="txtNome" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Categoria:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <ComboBox fx:id="cbCategoria" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Label text="Tipo:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <ComboBox fx:id="cbTipo" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                    <Label text="Data:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                    <DatePicker fx:id="dpData" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                    <Label text="Responsável:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                    <TextField fx:id="txtResponsavel" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                    <Label text="Arquivo:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                    <HBox spacing="6" GridPane.rowIndex="5" GridPane.columnIndex="1">
                        <TextField fx:id="txtArquivo" editable="false"/>
                        <Button text="Upload" onAction="#onUpload"/>
                    </HBox>
                </GridPane>

                <Label text="Descrição:"/>
                <TextArea fx:id="txtDescricao" prefRowCount="4"/>
            </VBox>

            <TableView fx:id="tabela" prefHeight="200">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
                    <TableColumn fx:id="colNome" text="Nome" prefWidth="220"/>
                    <TableColumn fx:id="colCategoria" text="Categoria" prefWidth="140"/>
                    <TableColumn fx:id="colTipo" text="Tipo" prefWidth="120"/>
                </columns>
            </TableView>
        </SplitPane>
    </center>
</BorderPane>
