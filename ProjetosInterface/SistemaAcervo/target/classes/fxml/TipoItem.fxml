<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.SistemaAcervo.controller.TipoItemController"
      spacing="10" prefWidth="600" prefHeight="400">

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <HBox spacing="10">
        <Button text="Novo" onAction="#onNovo" prefWidth="80"/>
        <Button text="Editar" onAction="#onEditar" prefWidth="80"/>
        <Button text="Remover" onAction="#onRemover" prefWidth="80"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Atualizar" onAction="#onRefresh" prefWidth="80"/>
    </HBox>

    <TableView fx:id="tableTipos" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
            <TableColumn fx:id="colNome" text="Nome" prefWidth="200"/>
            <TableColumn fx:id="colDesc" text="Descrição" prefWidth="300"/>
        </columns>
    </TableView>

</VBox>