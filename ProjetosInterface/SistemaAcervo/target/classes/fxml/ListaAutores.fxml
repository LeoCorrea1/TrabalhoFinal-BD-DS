<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.SistemaAcervo.controller.AutorController"
      spacing="10" prefWidth="500" prefHeight="400">

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <HBox spacing="10">
        <Button text="Novo Autor" onAction="#onNovo"/>
        <Button text="Editar" onAction="#onEditar"/>
        <Button text="Remover" onAction="#onRemover"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Atualizar" onAction="#onRefresh"/>
    </HBox>

    <TableView fx:id="tableAutores" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
            <TableColumn fx:id="colNome" text="Nome" prefWidth="150"/>
            <TableColumn fx:id="colSobrenome" text="Sobrenome" prefWidth="150"/>
            <TableColumn fx:id="colNacionalidade" text="Nacionalidade" prefWidth="120"/>
        </columns>
    </TableView>

</VBox>