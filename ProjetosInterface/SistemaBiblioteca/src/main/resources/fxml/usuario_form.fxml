<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.SistemaBiblioteca.controller.UsuarioFormController"
      prefWidth="900" prefHeight="600"
      spacing="15" alignment="CENTER"
      style="-fx-background-color:whitesmoke; -fx-padding:20;">

    <HBox alignment="CENTER_LEFT" spacing="10"
          style="-fx-background-color:#2c3e50; -fx-padding:10;">
        <Button text="⟵ Voltar" onAction="#onVoltar"
                style="-fx-background-color:#ecf0f1;"/>
        <!-- agora com fx:id -->
        <Label fx:id="lblTitulo" text="Cadastro de Usuário"
               style="-fx-font-size:18; -fx-font-weight:bold; -fx-text-fill:white;"/>
    </HBox>

    <VBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Nome:"/><TextField fx:id="txtNome" prefWidth="400"/>
        <Label text="Email:"/><TextField fx:id="txtEmail" prefWidth="400"/>
        <Label text="Telefone:"/><TextField fx:id="txtTelefone" prefWidth="400"/>
        <Label text="Tipo:"/><ComboBox fx:id="comboTipo" prefWidth="400"/>
    </VBox>

    <HBox spacing="12" alignment="CENTER">
        <Button text="Salvar" onAction="#onSalvar"
                style="-fx-background-color:#27ae60; -fx-text-fill:white;"/>
        <Button text="Voltar" onAction="#onVoltar"
                style="-fx-background-color:#7f8c8d; -fx-text-fill:white;"/>
    </HBox>
</VBox>