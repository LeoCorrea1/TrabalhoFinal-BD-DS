<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.SistemaBiblioteca.controller.ExemplarListController"
            prefWidth="900" prefHeight="600"
            style="-fx-background-color:whitesmoke;">

    <top>
        <VBox spacing="6" style="-fx-background-color:#2c3e50; -fx-padding:10;">
            <HBox spacing="8" alignment="CENTER_LEFT">
                <Button text="⟵ Voltar" onAction="#onVoltar"
                        style="-fx-background-color:#ecf0f1;"/>
                <Label text="Exemplares" textFill="white"
                       style="-fx-font-size:18; -fx-font-weight:bold;"/>
            </HBox>
            <HBox spacing="8" style="-fx-padding:6;">
                <Label text="Exemplares do Item" textFill="white"/>
                <Button text="Novo" onAction="#onNovo"/>
                <Button fx:id="btnEditar" text="Editar" onAction="#onEditar" disable="true"/>
                <Button fx:id="btnExcluir" text="Excluir" onAction="#onExcluir" disable="true"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <TableView fx:id="tableView" prefHeight="500">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="70"/>
                <TableColumn fx:id="colCodigo" text="Código de Barras" prefWidth="220"/>
                <TableColumn fx:id="colEstado" text="Estado" prefWidth="180"/>
                <TableColumn fx:id="colDisp" text="Disponível" prefWidth="100"/>
                <TableColumn fx:id="colLocal" text="Localização" prefWidth="240"/>
            </columns>
        </TableView>
    </center>
</BorderPane>