<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.SistemaBiblioteca.controller.UsuarioListController"
            prefWidth="900" prefHeight="600"
            style="-fx-background-color:whitesmoke;">

    <top>
        <VBox spacing="6" style="-fx-background-color:#2c3e50; -fx-padding:10;">
            <HBox alignment="CENTER_LEFT" spacing="8">
                <Button text="⟵ Voltar" onAction="#onVoltar"
                        style="-fx-background-color:#ecf0f1;"/>
                <Label text="Usuários" textFill="white"
                       style="-fx-font-size:18; -fx-font-weight:bold;"/>
            </HBox>

            <HBox spacing="8" style="-fx-padding:6;">
                <TextField fx:id="txtPesquisa" promptText="Pesquisar por nome..." HBox.hgrow="ALWAYS"/>
                <Button text="Pesquisar" onAction="#onPesquisar"/>
                <Button text="Novo" onAction="#onNovo"/>
                <Button fx:id="btnEditar" text="Editar" disable="true" onAction="#onEditar"/>
                <Button fx:id="btnExcluir" text="Excluir" disable="true" onAction="#onExcluir"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <TableView fx:id="tabela" prefHeight="500">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
                <TableColumn fx:id="colNome" text="Nome" prefWidth="180"/>
                <TableColumn fx:id="colEmail" text="Email" prefWidth="180"/>
                <TableColumn fx:id="colTelefone" text="Telefone" prefWidth="140"/>
                <TableColumn fx:id="colTipo" text="Tipo" prefWidth="140"/>
            </columns>
        </TableView>
    </center>
</BorderPane>