<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.SistemaBiblioteca.controller.MovimentacaoListController"
            prefWidth="900" prefHeight="600"
            style="-fx-background-color:whitesmoke;">

    <top>
        <VBox spacing="6" style="-fx-background-color:#2c3e50; -fx-padding:10;">
            <HBox alignment="CENTER_LEFT" spacing="8">
                <Button text="⟵ Voltar" onAction="#onVoltar"
                        style="-fx-background-color:#ecf0f1;"/>
                <Label text="Movimentações / Logs" textFill="white"
                       style="-fx-font-size:18; -fx-font-weight:bold;"/>
            </HBox>
            <HBox spacing="8" style="-fx-padding:6;">
                <Button text="Atualizar" onAction="#onAtualizar"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <TableView fx:id="table" prefHeight="500">
            <columns>
                <TableColumn fx:id="colTipo" text="Tipo" prefWidth="120"/>
                <TableColumn fx:id="colDescricao" text="Descrição" prefWidth="450"/>
                <TableColumn fx:id="colUsuario" text="Usuário" prefWidth="160"/>
                <TableColumn fx:id="colExemplar" text="Exemplar" prefWidth="140"/>
                <TableColumn fx:id="colDataHora" text="Data/Hora" prefWidth="160"/>
            </columns>
        </TableView>
    </center>
</BorderPane>