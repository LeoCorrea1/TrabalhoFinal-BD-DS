<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.SistemaBiblioteca.controller.EmprestimoListController"
            prefWidth="900" prefHeight="500"
            style="-fx-background-color:whitesmoke;">

    <top>
        <VBox spacing="6" style="-fx-background-color:#2c3e50; -fx-padding:10;">
            <HBox spacing="8" alignment="CENTER_LEFT">
                <Button text="⟵ Voltar" onAction="#onVoltar"
                        style="-fx-background-color:#ecf0f1;"/>
                <Label text="Empréstimos" textFill="white"
                       style="-fx-font-size:18; -fx-font-weight:bold;"/>
            </HBox>

            <HBox spacing="8" style="-fx-padding:6;">
                <Button text="Novo" onAction="#onNovo"/>
                <Button text="Editar" onAction="#onEditar"/>
                <Button text="Excluir" onAction="#onExcluir"/>
                <Button text="Atualizar" onAction="#onAtualizar"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <TableView fx:id="table" prefHeight="500">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
                <TableColumn fx:id="colExemplar" text="Exemplar" prefWidth="120"/>
                <TableColumn fx:id="colUsuario" text="Usuário" prefWidth="150"/>
                <TableColumn fx:id="colEmprestimo" text="Data Empréstimo" prefWidth="160"/>
                <TableColumn fx:id="colPrevista" text="Prev. Devolução" prefWidth="160"/>
                <TableColumn fx:id="colDevolucao" text="Devolvido Em" prefWidth="160"/>
                <TableColumn fx:id="colStatus" text="Status" prefWidth="100"/>
            </columns>
        </TableView>
    </center>
</BorderPane>