<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.SistemaBiblioteca.controller.ReservaListController"
            prefWidth="900" prefHeight="600"
            style="-fx-background-color:whitesmoke;">

    <top>
        <VBox spacing="6" style="-fx-background-color:#2c3e50; -fx-padding:10;">
            <HBox alignment="CENTER_LEFT" spacing="8">
                <Button text="⟵ Voltar" onAction="#onVoltar"
                        style="-fx-background-color:#ecf0f1;"/>
                <Label text="Reservas" textFill="white"
                       style="-fx-font-size:18; -fx-font-weight:bold;"/>
            </HBox>

            <HBox spacing="8" style="-fx-padding:6;">
                <Button text="Nova" onAction="#onNovo"/>
                <Button text="Editar" onAction="#onEditar"/>
                <Button text="Excluir" onAction="#onExcluir"/>
                <Button text="Atualizar" onAction="#onAtualizar"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <TableView fx:id="table" prefHeight="500">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
                <TableColumn fx:id="colExemplar" text="Exemplar" prefWidth="140"/>
                <TableColumn fx:id="colUsuario"  text="Usuário"  prefWidth="180"/>
                <TableColumn fx:id="colDataReserva" text="Data Reserva" prefWidth="160"/>
                <TableColumn fx:id="colExpiracao" text="Expira em" prefWidth="160"/>
                <TableColumn fx:id="colStatus" text="Status" prefWidth="100"/>
            </columns>
        </TableView>
    </center>
</BorderPane>