<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.SistemaBiblioteca.controller.EditoraController"
            prefWidth="1000" prefHeight="600"
            style="-fx-background-color:whitesmoke;">

    <top>
        <VBox spacing="6" style="-fx-background-color:#2c3e50; -fx-padding:10;">
            <HBox spacing="8" alignment="CENTER_LEFT">
                <Button text="⟵ Voltar" onAction="#onVoltar"
                        style="-fx-background-color:#ecf0f1;"/>
                <Label text="Editoras" textFill="white"
                       style="-fx-font-size:18; -fx-font-weight:bold;"/>
            </HBox>

            <HBox spacing="8" style="-fx-padding:6;">
                <TextField fx:id="searchField" promptText="Pesquisar por nome..."
                           HBox.hgrow="ALWAYS"/>
                <Button text="Pesquisar" onAction="#onPesquisar"/>
                <Button text="Novo" onAction="#onNova"/>
                <Button fx:id="btnEditar" text="Editar" onAction="#onEditar" disable="true"/>
                <Button fx:id="btnExcluir" text="Excluir" onAction="#onExcluir" disable="true"/>
                <Button text="Atualizar" onAction="#onRefresh"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <TableView fx:id="tableView" prefHeight="500">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
                <TableColumn fx:id="colNome" text="Nome" prefWidth="260"/>
                <TableColumn fx:id="colContato" text="Contato" prefWidth="200"/>
                <TableColumn fx:id="colEndereco" text="Endereço" prefWidth="260"/>
            </columns>
        </TableView>
    </center>
</BorderPane>