<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.SistemaBiblioteca.controller.ReservaFormController"
      alignment="CENTER" spacing="15"
      prefWidth="900" prefHeight="600"
      style="-fx-background-color:whitesmoke; -fx-padding:20;">

    <HBox alignment="CENTER_LEFT" spacing="10"
          style="-fx-background-color:#2c3e50; -fx-padding:10;">
        <Button text="⟵ Voltar" onAction="#onVoltar"
                style="-fx-background-color:#ecf0f1;"/>
        <Label text="Reserva" style="-fx-text-fill:white; -fx-font-size:18; -fx-font-weight:bold;"/>
    </HBox>

    <VBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Exemplar:"/><ComboBox fx:id="comboExemplar" prefWidth="400"/>
        <Label text="Usuário:"/><ComboBox fx:id="comboUsuario" prefWidth="400"/>
        <Label text="Data de Expiração (24h padrão):"/><DatePicker fx:id="dateExpiracao"/>
        <Label text="Status:"/><ChoiceBox fx:id="choiceStatus"/>
    </VBox>

    <HBox spacing="12" alignment="CENTER">
        <Button text="Salvar" onAction="#onSalvar"
                style="-fx-background-color:#27ae60; -fx-text-fill:white;"/>
        <Button text="Voltar" onAction="#onVoltar"
                style="-fx-background-color:#7f8c8d; -fx-text-fill:white;"/>
    </HBox>
</VBox>