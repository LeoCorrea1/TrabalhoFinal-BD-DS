<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.SistemaBiblioteca.controller.EditoraFormController"
      spacing="15" alignment="CENTER"
      prefWidth="900" prefHeight="600"
      style="-fx-background-color:whitesmoke; -fx-padding:20;">

    <HBox alignment="CENTER_LEFT" spacing="10"
          style="-fx-background-color:#2c3e50; -fx-padding:10;">
        <Button text="⟵ Voltar" onAction="#onCancelar"
                style="-fx-background-color:#ecf0f1;"/>
        <Label text="Cadastro de Editora"
               style="-fx-font-size:18; -fx-font-weight:bold; -fx-text-fill:white;"/>
    </HBox>

    <VBox spacing="12" alignment="CENTER_LEFT" style="-fx-padding:20;">
        <TextField fx:id="txtNome" promptText="Nome" prefWidth="400"/>
        <TextField fx:id="txtContato" promptText="Contato" prefWidth="400"/>
        <TextField fx:id="txtEndereco" promptText="Endereço" prefWidth="400"/>
    </VBox>

    <HBox spacing="15" alignment="CENTER">
        <Button text="Salvar" onAction="#onSalvar"
                style="-fx-background-color:#27ae60; -fx-text-fill:white;"/>
        <Button text="Voltar" onAction="#onCancelar"
                style="-fx-background-color:#7f8c8d; -fx-text-fill:white;"/>
    </HBox>
</VBox>