<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.SistemaBiblioteca.controller.ExemplarFormController"
      prefWidth="900" prefHeight="600"
      alignment="CENTER" spacing="15"
      style="-fx-background-color:whitesmoke; -fx-padding:20;">

    <HBox alignment="CENTER_LEFT" spacing="10"
          style="-fx-background-color:#2c3e50; -fx-padding:10;">
        <Button text="⟵ Voltar" onAction="#onVoltar"
                style="-fx-background-color:#ecf0f1;"/>
        <Label text="Cadastro de Exemplar"
               style="-fx-font-size:18; -fx-text-fill:white; -fx-font-weight:bold;"/>
    </HBox>

    <GridPane hgap="8" vgap="10">
        <columnConstraints>
            <ColumnConstraints minWidth="130"/>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>

        <Label text="Código de Barras:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="txtCodigo" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Estado:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="txtEstado" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Disponível:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <CheckBox fx:id="chkDisponivel" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Localização:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <HBox spacing="8" GridPane.rowIndex="3" GridPane.columnIndex="1">
            <ComboBox fx:id="comboLocalizacao" HBox.hgrow="ALWAYS"/>
            <Button text="..." onAction="#onOpenLocalizacao"/>
        </HBox>
    </GridPane>

    <HBox spacing="12" alignment="CENTER">
        <Button text="Salvar" onAction="#onSalvar"
                style="-fx-background-color:#27ae60; -fx-text-fill:white;"/>
        <Button text="Voltar" onAction="#onVoltar"
                style="-fx-background-color:#7f8c8d; -fx-text-fill:white;"/>
    </HBox>
</VBox>