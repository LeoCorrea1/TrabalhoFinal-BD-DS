<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.SistemaBiblioteca.controller.DashboardController"
      alignment="CENTER" spacing="15"
      style="-fx-background-color:whitesmoke;" prefWidth="900" prefHeight="600">

    <Label text="Painel - Sistema Biblioteca"
           style="-fx-font-size:22; -fx-font-weight:bold; -fx-text-fill:#2c3e50;"/>

    <VBox spacing="10" alignment="CENTER">
        <Button text="Gerenciar Acervo" onAction="#onGerenciarAcervo"
                style="-fx-pref-width:200; -fx-background-color:#2c3e50; -fx-text-fill:white;"/>
        <Button text="Empréstimos" onAction="#onEmprestimos"
                style="-fx-pref-width:200; -fx-background-color:#34495e; -fx-text-fill:white;"/>
        <Button text="Reservas" onAction="#onReservas"
                style="-fx-pref-width:200; -fx-background-color:#34495e; -fx-text-fill:white;"/>
        <Button text="Movimentações / Logs" onAction="#onMovimentacoes"
                style="-fx-pref-width:200; -fx-background-color:#34495e; -fx-text-fill:white;"/>
        <Button text="Usuários" onAction="#onUsuarios"
                style="-fx-pref-width:200; -fx-background-color:#34495e; -fx-text-fill:white;"/>
    </VBox>

    <Button text="Sair" onAction="#onSair"
            style="-fx-background-color:#e74c3c; -fx-text-fill:white; -fx-pref-width:100;"/>
</VBox>