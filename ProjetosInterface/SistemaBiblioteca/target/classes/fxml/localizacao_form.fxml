<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.SistemaBiblioteca.controller.LocalizacaoFormController"
      prefWidth="900" prefHeight="600"
      style="-fx-background-color:whitesmoke; -fx-padding:20;"
      spacing="15" alignment="CENTER">

    <HBox alignment="CENTER_LEFT" spacing="10"
          style="-fx-background-color:#2c3e50; -fx-padding:10;">
        <Button text="⟵ Voltar" onAction="#onVoltar"
                style="-fx-background-color:#ecf0f1;"/>
        <Label text="Cadastro de Localização"
               style="-fx-font-size:18; -fx-text-fill:white; -fx-font-weight:bold;"/>
    </HBox>

    <GridPane hgap="10" vgap="10">
        <ColumnConstraints minWidth="130"/><ColumnConstraints hgrow="ALWAYS"/>

        <Label text="Setor:" GridPane.rowIndex="0"/>
        <TextField fx:id="txtSetor" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Prateleira:" GridPane.rowIndex="1"/>
        <TextField fx:id="txtPrateleira" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Caixa:" GridPane.rowIndex="2"/>
        <TextField fx:id="txtCaixa" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="12" alignment="CENTER">
        <Button text="Salvar" onAction="#onSalvar"
                style="-fx-background-color:#27ae60; -fx-text-fill:white;"/>
        <Button text="Voltar" onAction="#onVoltar"
                style="-fx-background-color:#7f8c8d; -fx-text-fill:white;"/>
    </HBox>
</VBox>