<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="12" xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.projetofxcombd.controller.LivroControllerFX"
      style="-fx-padding: 15px;">

    <Label text="Gerenciar Livros" style="-fx-font-size: 22px"/>

    <GridPane hgap="10" vgap="10">
        <padding><Insets top="10"/></padding>

        <Label text="Item do Acervo:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <ComboBox fx:id="comboAcervo" prefWidth="200"
                  GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="ISBN:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="txtIsbn" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Edição:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="txtEdicao" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Nº Páginas:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="txtPaginas" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="ID Editora:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="txtIdEditora" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10">
        <Button text="Salvar" onAction="#salvar"/>
        <Button text="Buscar por ISBN" onAction="#buscarPorISBN"/>
        <Button text="Buscar por ID" onAction="#buscarPorID"/>
        <Button text="Deletar" onAction="#deletar"/>
    </HBox>

</VBox>
